{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // --- 1. Configuração do Banco de Dados (SQLite) ---
  "ConnectionStrings": {
    // O banco de dados será criado no arquivo 'CatalogoFilmesTempo.db'
    "DefaultConnection": "DataSource=CatalogoFilmesTempo.db"
  },

  // --- 2. Configuração da API TMDb ---
  "TmdbConfiguration": {
    // IMPORTANTE: Substitua "SUA_CHAVE_AQUI" pela chave da sua API TMDb
    "TmdbApiKey": "SUA_CHAVE_AQUI",

    // URL base da API
    "TmdbBaseUrl": "https://api.themoviedb.org/3/",

    // URL base para carregar imagens de poster (tamanho w500 é comum)
    "TmdbImageBaseUrl": "https://image.tmdb.org/t/p/w500/"
  }
}