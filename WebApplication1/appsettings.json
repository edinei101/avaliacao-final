{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // =========================================================
  // 1. CONFIGURAÇÃO DO BANCO DE DADOS (SQLite)
  // O projeto usa SQLite para desenvolvimento, e o nome do arquivo DB é:
  // CatalogoFilmesTempo.db (criado na raiz do projeto).
  // =========================================================
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=CatalogoFilmesTempo.db"
  },

  // =========================================================
  // 2. CONFIGURAÇÕES DA API TMDb (Filmes)
  // A chave da API foi definida como: 2afd187264ced401f856c9c587d9dd5f
  // =========================================================
  "TmdbOptions": {
    "BaseImageUrl": "https://image.tmdb.org/t/p/", // Ajuste opcional para nome mais limpo
    "ApiKey": "2afd187264ced401f856c9c587d9dd5f" // Propriedade sincronizada com a classe C#
  },

  // =========================================================
  // 3. CONFIGURAÇÕES DA API DE CLIMA
  // Você precisará de uma chave de API de clima (ex: OpenWeatherMap)
  // =========================================================
  "WeatherApiConfiguration": {
    // A API Open-Meteo não precisa de ApiKey!
    "BaseUrl": "https://api.open-meteo.com/v1/",
    "DefaultLatitude": "-25.43", // Coordenadas padrão para Curitiba (exemplo)
    "DefaultLongitude": "-49.27"
  }
}