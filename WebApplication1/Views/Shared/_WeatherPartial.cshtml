@model CatalogoFilmesTempo.Models.Api.WeatherForecast

@if (Model != null)
{
    <div class="card bg-light mt-3 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-cloud-sun"></i> Previsão do Tempo em @Model.CityName
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <img src="https://openweathermap.org/img/wn/@(Model.Icon)@("2x").png" alt="@Model.Description" style="width: 80px;">
                    <h4 class="mt-2">@Model.Description?.ToUpper()</h4>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li>
                            <i class="fas fa-thermometer-half"></i> Temperatura:
                            <strong>@Model.Temperature.ToString("F1")°C</strong>
                        </li>
                        <li>
                            <i class="fas fa-temperature-low"></i> Sensação Térmica:
                            <strong>@Model.FeelsLike.ToString("F1")°C</strong>
                        </li>
                        <li>
                            <i class="fas fa-tint"></i> Umidade:
                            <strong>@Model.humidity%</strong>
                        </li>
                        <li>
                            <i class="fas fa-wind"></i> Vento:
                            <strong>@Model.wind_speed.ToString("F1") m/s</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else if (ViewData["WeatherError"] != null)
{
    <div class="alert alert-warning mt-3">
        <i class="fas fa-exclamation-triangle"></i> Erro ao carregar o clima: @ViewData["WeatherError"]
    </div>
}
else
{
    <div class="alert alert-secondary mt-3">
        <i class="fas fa-info-circle"></i> Não há dados de clima disponíveis (ou a API de clima não foi configurada).
    </div>
}