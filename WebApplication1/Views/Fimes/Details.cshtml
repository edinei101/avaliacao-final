@model CatalogoFilmesTempo.Models.Filme
@using Microsoft.Extensions.Options
@inject IOptions<CatalogoFilmesTempo.Models.Api.TmdbConfiguration> TmdbConfig // Injeção de IOptions



@inject IOptions<CatalogoFilmesTempo.Models.Api.TmdbConfiguration> TmdbConfig 

@{
    ViewData["Title"] = $"Detalhes: {Model.Titulo}";
    
    // DEFINIÇÃO ÚNICA DAS VARIÁVEIS DE IMAGEM
    var baseImageUrl = TmdbConfig.Value.TmdbImageBaseUrl;
    var posterUrl = !string.IsNullOrEmpty(Model.CaminhoPoster) 
        ? baseImageUrl + Model.CaminhoPoster 
        : "/images/placeholder_movie.svg";
    
    // VARIÁVEL WEATHER
    var weather = ViewData["Weather"] as CatalogoFilmesTempo.Models.Api.WeatherForecast;
}

<div class="container mt-4">
    <div class="row">
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                
                <img src="@posterUrl" class="card-img-top" alt="Poster de @Model.Titulo" style="height: 450px; object-fit: cover;">
                <div class="card-body text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">
                        <i class="fas fa-edit"></i> Editar Filme (RF11)
                    </a>
                    <a asp-action="Catalogo" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Voltar ao Catálogo
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h1>@Model.Titulo</h1>
            <p class="lead">
                <i class="fas fa-calendar-alt"></i> Lançamento: **@(Model.DataLancamento?.ToString("dd/MM/yyyy") ?? "N/D")**
            </p>
            <p class="lead">
                <i class="fas fa-clock"></i> Duração: **@Model.DuracaoMinutos min**
            </p>
            
            <hr />

            <h4>Sinopse</h4>
            <p>@Model.Sinopse</p>
            
            <hr />

            <h4>🌍 Informações Geográficas</h4>
            <dl class="row">
                <dt class="col-sm-3">Cidade de Referência:</dt>
                <dd class="col-sm-9"><strong>@Model.CidadeReferencia</strong></dd>
                
                <dt class="col-sm-3">Latitude:</dt>
                <dd class="col-sm-9">@(Model.Latitude?.ToString("F4") ?? "N/D")</dd>
                
                <dt class="col-sm-3">Longitude:</dt>
                <dd class="col-sm-9">@(Model.Longitude?.ToString("F4") ?? "N/D")</dd>
            </dl>

            <h4>☀️ Previsão do Tempo</h4>
            @await Html.PartialAsync("~/Views/Shared/_WeatherPartial.cshtml", weather)

        </div>
    </div>
