@model CatalogoFilmesTempo.Models.Filme
@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = $"Importar Filme: {Model.Titulo}";
}

<div class="container mt-4">
    <h2>➕ Importar Filme para o Catálogo Local</h2>
    <p class="lead">
        Para finalizar a importação, precisamos que você forneça a **cidade de referência** e suas **coordenadas geográficas** (Latitude e Longitude) para que possamos buscar a previsão do tempo associada (RF03).
    </p>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <hr />

    <div class="row">

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    Detalhes do TMDb
                </div>
                <div class="card-body">
                    <dl class="row small">
                        <dt class="col-sm-5">Título:</dt>
                        <dd class="col-sm-7 text-truncate">@Model.Titulo</dd>

                        <dt class="col-sm-5">Lançamento:</dt>
                        <dd class="col-sm-7">@(Model.DataLancamento?.ToString("yyyy") ?? "N/D")</dd>

                        <dt class="col-sm-5">Duração:</dt>
                        <dd class="col-sm-7">@Model.DuracaoMinutos min</dd>
                    </dl>
                    <p class="text-muted small">
                        @Model.Sinopse
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <form asp-action="Importar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="TmdbId" />
                    <input type="hidden" asp-for="Titulo" />
                    <input type="hidden" asp-for="Sinopse" />
                    <input type="hidden" asp-for="DataLancamento" />
                    <input type="hidden" asp-for="DuracaoMinutos" />
                    <input type="hidden" asp-for="CaminhoPoster" />

                    <div class="mb-3">
                        <label asp-for="CidadeReferencia" class="form-label"></label>
                        <input asp-for="CidadeReferencia" class="form-control" />
                        <span asp-validation-for="CidadeReferencia" class="text-danger small"></span>
                        <div class="form-text">
                            Ex: Rio de Janeiro. Esta cidade será usada para contexto.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Latitude" class="form-label"></label>
                        <input asp-for="Latitude" class="form-control" type="number" step="any" />
                        <span asp-validation-for="Latitude" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Longitude" class="form-label"></label>
                        <input asp-for="Longitude" class="form-control" type="number" step="any" />
                        <span asp-validation-for="Longitude" class="text-danger small"></span>
                        <div class="form-text">
                            Pesquise as coordenadas da cidade escolhida (Ex: Latitude 51.5, Longitude -0.1).
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Salvar no Catálogo
                        </button>
                        <a asp-action="Buscar" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>